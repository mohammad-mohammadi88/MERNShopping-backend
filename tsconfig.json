{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2024",
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types"],

        "paths": {
            "@/*": [ "*" ],
            "@P_Category/*": [ "Components/productCategory/*" ],
            "@P_Offers/*": [ "Components/productOffers/*" ],
            "@Products/*": [ "Components/products/*" ],
            "@Payment/*": [ "Components/payment/*" ],
            "@Coupon/*": [ "Components/coupon/*" ],
            "@Orders/*": [ "Components/orders/*" ],
            "@Users/*": [ "Components/users/*" ]
        }
    },
    "include": [
        "src"
, "worker/image.worker.cjs"    ],
    "exclude": ["node_modules"]
}