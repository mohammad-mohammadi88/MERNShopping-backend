{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2024",
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types"],

        "paths": {
            "@/*": [ "*" ],
            "@P_Category/*": [ "Components/productCategory/*" ],
            "@P_Offer/*": [ "Components/productOffer/*" ],
            "@Product/*": [ "Components/product/*" ],
            "@Payment/*": [ "Components/payment/*" ],
            "@Coupon/*": [ "Components/coupon/*","services/validation/coupon/*" ],
            "@Order/*": [ "Components/order/*" ],
            "@User/*": [ "Components/user/*" ]
        }
    },
    "include": [
        "src"
, "worker/image.worker.cjs"    ],
    "exclude": ["node_modules"]
}