{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2024",
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types"],

        "paths": {
            "@/*": [
                "*"
            ],
            "@P_Category/*": [
                "Components/productCategory/*"
            ],
            "@Products/*": [
                "Components/products/*"
            ],
            "@Coupon/*": [
                "Components/coupon/*"
            ],
            "@Users/*": [
                "Components/users/*"
            ],
            "@P_Offers/*": [
                "Components/productOffers/*"
            ],
            "@Orders/*": [
                "Components/orders/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": ["node_modules"]
}