{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2024",
        "lib": ["esnext"],
        "types": ["node"],
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,

        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@Products/*": ["Components/products/*"],
            "@Users/*": ["Components/users/*"],
            "@Orders/*": ["Components/orders/*"]
        }
    },
    "include": ["src"]
}
