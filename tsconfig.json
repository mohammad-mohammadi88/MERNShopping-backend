{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2024",
        "lib": ["esnext"],
        "types": ["node"],
        "verbatimModuleSyntax": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types"],

        "paths": {
            "@/*": ["*"],
            "@P_Category/*": ["Components/productCategory/*"],
            "@P_Offer/*": ["Components/productOffer/*"],
            "@Product/*": ["Components/product/*"],
            "@Payment/*": ["Components/payment/*"],
            "@Shipment/*": ["Components/shipment/*"],
            "@Coupon/*": ["Components/coupon/*", "services/coupon/*"],
            "@Comment/*": ["Components/comment/*"],
            "@Order/*": ["Components/order/*"],
            "@User/*": ["Components/user/*"],
            "@Middlewares": ["middlewares/index.ts"],
            "@Shared": ["shared/index.ts"]
        }
    },
    "include": ["src", "worker/image.worker.cjs"],
    "exclude": ["node_modules"]
}
